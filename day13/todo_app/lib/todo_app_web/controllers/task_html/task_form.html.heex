<!-- 関数コンポーネント：フォーム -->

<!-- changeset sent by controller -->
<!-- ~p creates router pass -->
<.simple_form :let={f} for={@changeset} action={@action}>
  <.input field={f[:title]} type="text" label="Title" />
  <.input field={f[:date]} type="date" label="Date" />
  <:actions>
    <.button>Save Task</.button>
  </:actions>
</.simple_form>
